{
  "manifest_version": 3,
  "name": "YouTube addons",
  "description": "為 youtube 網站提供可自訂的功能",
  "version": "1.2",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "js": [
        "isolated.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "addons_loader.js",
      "lang/*/*.json",
        "functions/addons.json",
        "functions/*/*.html",
        "functions/*/*.js",
        "functions/*/*.json",
        "functions/*/*.css"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}